#!/bin/bash

README="README.md"

if [[ ! -f "$README" ]]; then
    exit 0
fi

# Update npm versions
bash scripts/update-versions.sh

# Update date
CURRENT_DATE=$(date "+%B %d, %Y")
sed -i '' "s/\*Last updated on .*/\*Last updated on $CURRENT_DATE\*/" "$README"

# Stage if anything changed
if ! git diff --quiet "$README"; then
    git add "$README"
fi
